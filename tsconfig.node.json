{
  "compilerOptions": {
    "target": "ES2022",
    // Fix: Changed "ES2023" to the valid "ES2022" and "DOM" for general support.
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // Fix: Add this property to ensure consistent file casing
    "forceConsistentCasingInFileNames": true
  },
  "include": ["vite.config.ts"]
}